{
  "name": "thrust-engine",
  "author": "Hayesmaker Media Ltd @hayes_maker",
  "license": "ISC",
  "version": "0.0.17",
  "private": true,
  "scripts": {
    "pretest": "npm config set travis_build && echo 'Starting tests: NODE_ENV=${NODE_ENV}' && npm run jshint",
    "test": "npm run test:$TEST_SUITE",
    "test:units": "npm run mocha",
    "test:e2e": "npm run travis",
    "start": "pm2 start ./bin/www",
    "deploy": "npm run heroku",
    "postinstall": "npm run build",
    "prebuild": "mkdir -p public/javascripts/browserify",
    "build": "npm run browserify:test && npm run browserify:app",
    "postbuild": "npm run uglify && npm run yuidoc",
    "clean": "rm .git/hooks/pre-push",
    "browserify:test": "echo 'browserify:test' && browserify -p proxyquireify/plugin -e src/test/tests.js -o public/javascripts/test/tests.js -d",
    "browserify:app": "echo 'browserify:app' && browserify -e src/app/main.js -o public/javascripts/browserify/thrust-engine.js -d",
    "heroku": "echo 'Deploying to heroku master' && git push heroku master",
    "uglify": "echo 'Uglifying bundle' && uglifyjs public/javascripts/browserify/thrust-engine.js -o public/javascripts/browserify/thrust-engine.min.js --source-map public/javascripts/browserify/thrust-engine.min.js.map --screw-ie8",
    "build:app": "npm run browserify:app",
    "build:quick": "npm run browserify:app",
    "build:test": "npm run browserify:app && npm run browserify:test && npm test",
    "yuidoc": "echo 'Compiling source documentation' && ./node_modules/.bin/yuidoc ./src/app -o ./public/yuidoc",
    "nightwatch": "echo 'Attempting to launch nightwatch end to end tests' && cd test/e2e/nightwatch && nightwatch --env integration",
    "mocha": "echo 'Attempting to run mocha bdd style unit tests' && mocha-phantomjs ./public/javascripts/test/index.html",
    "jshint": "echo 'Static Analysis' && jshint src/app/**/*.js --reporter=node_modules/jshint-stylish",
    "e2e": "echo 'Attempting Browserstack test sweep' && cd test/e2e/nightwatch && nightwatch  -c nightwatch.json -e browserstack && cd ../../..",
    "travis": "echo 'Travis attempting Browserstack test sweep' && cd test/e2e/nightwatch && nightwatch  -c nightwatch.json -e travis && cd ../../.."
  },
  "dependencies": {
    "body-parser": "~1.12.0",
    "browserify": "^10.2.1",
    "browserify-shim": "^3.8.6",
    "chai": "^3.4.1",
    "cookie-parser": "~1.3.4",
    "debug": "~2.1.1",
    "express": "~4.12.0",
    "grunt": "^0.4.5",
    "grunt-cli": "^0.1.13",
    "jade": "~1.9.2",
    "lodash": "^3.9.1",
    "morgan": "~1.5.1",
    "nightwatch": "^0.8.9",
    "phase-2-e": "^0.1.3",
    "pm2": "^0.15.10",
    "proxyquire": "^1.7.3",
    "proxyquire-universal": "^1.0.8",
    "proxyquireify": "^3.0.0",
    "serve-favicon": "~2.2.0",
    "serve-index": "^1.7.2",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "uglify-js": "^2.6.1",
    "yuidocjs": "^0.9.0"
  },
  "description": "Thrust: an awesome 8 bit physics based puzzle/blaster.  Thrust-Engine: A Canvas based HTML5 game engine for making games similar to Thrust",
  "main": "app.js",
  "keywords": [
    "thrust",
    "phaser"
  ],
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {},
  "browser": {
    "Stats": "./src/libs/stats.js/stats.min.js",
    "camera": "./src/app/environment/Camera.js",
    "states": "./src/app/states/index.js",
    "mocks": "./src/test/mocks/index.js"
  },
  "devDependencies": {
    "bower": "^1.4.1",
    "bower-installer": "^1.2.0",
    "browserify-istanbul": "^0.2.1",
    "grunt-browserify": "^3.8.0",
    "grunt-contrib-jshint": "^0.11.2",
    "grunt-contrib-requirejs": "^0.4.4",
    "grunt-contrib-uglify": "^0.9.1",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-contrib-yuidoc": "^0.10.0",
    "grunt-mocha": "^0.4.13",
    "grunt-mocha-istanbul": "^2.4.0",
    "grunt-mocha-phantomjs": "^2.0.0",
    "grunt-smoothie": "^1.4.0",
    "istanbul": "^0.3.15",
    "istanbulify": "^0.1.0",
    "jshint": "^2.8.0",
    "jshint-stylish": "^2.1.0",
    "mocha": "^2.2.5",
    "mocha-phantomjs": "^4.0.1",
    "mochify-istanbul": "^2.2.2"
  }
}
