{
  "name": "thrust-engine",
  "author": "Hayesmaker Media Ltd @hayes_maker",
  "license": "ISC",
  "version": "0.0.14",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "grunt test",
    "deploy": "git push heroku master",
    "postinstall": "npm run build",
    "prebuild": "mkdir -p public/javascripts/browserify",
    "build": "browserify -e src/app/main.js -o public/javascripts/browserify/thrust-engine.js -t browserify-shim -d",
    "postbuild": "uglifyjs public/javascripts/browserify/thrust-engine.js -o public/javascripts/browserify/thrust-engine.min.js --source-map public/javascripts/browserify/thrust-engine.min.js.map --screw-ie8 && echo 'Build completed'",
    "clean": "rm .git/hooks/pre-push"
  },
  "dependencies": {
    "body-parser": "~1.12.0",
    "browserify": "^10.2.1",
    "browserify-shim": "^3.8.6",
    "cookie-parser": "~1.3.4",
    "debug": "~2.1.1",
    "express": "~4.12.0",
    "grunt": "^0.4.5",
    "grunt-cli": "^0.1.13",
    "jade": "~1.9.2",
    "lodash": "^3.9.1",
    "morgan": "~1.5.1",
    "serve-favicon": "~2.2.0",
    "serve-index": "^1.7.2",
    "uglify-js": "^2.6.1"
  },
  "description": "Thrust: an awesome 8 bit physics based puzzle/blaster.  Thrust-Engine: A Canvas based HTML5 game engine for making games similar to Thrust",
  "main": "app.js",
  "keywords": [
    "thrust",
    "phaser"
  ],
  "browserify-shim": {
    "Stats": {
      "exports": "Stats"
    }
  },
  "browser": {
    "Stats": "./src/libs/stats.js/stats.min.js",
    "mocks": "./src/test/mocks/index.js",
    "camera": "./src/app/environment/Camera.js"
  },
  "devDependencies": {
    "bower": "^1.4.1",
    "bower-installer": "^1.2.0",
    "browserify-istanbul": "^0.2.1",
    "chai": "^2.3.0",
    "grunt-browserify": "^3.8.0",
    "grunt-contrib-jshint": "^0.11.2",
    "grunt-contrib-requirejs": "^0.4.4",
    "grunt-contrib-uglify": "^0.9.1",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-contrib-yuidoc": "^0.10.0",
    "grunt-mocha": "^0.4.13",
    "grunt-mocha-istanbul": "^2.4.0",
    "grunt-mocha-phantomjs": "^2.0.0",
    "grunt-smoothie": "^1.4.0",
    "istanbul": "^0.3.15",
    "istanbulify": "^0.1.0",
    "mocha": "^2.2.5",
    "mochify": "^2.9.0",
    "mochify-istanbul": "^2.2.2",
    "phase-2-e": "^0.1.1",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0"
  }
}
