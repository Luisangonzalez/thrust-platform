{
  "name": "thrust-engine",
  "author": "@hayes_maker",
  "license": "ISC",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build-test": "browserify ./test/tests.js -o ./public/javascripts/test/tests.js -d --verbose",
    "build-test-coverage": "browserify -t [ browserify-istanbul --ignore **/bower_components/** ] ./test/tests.js -o ./public/javascripts/test/tests.js -d",
    "coverage-report": "istanbul report --root coverage html",
    "cover": "mochify --plugin [ mochify-istanbul --report cobertura ] -r ./public/javascripts/browserify/phaser.js -t [browserify-shim]"
  },
  "dependencies": {
    "body-parser": "~1.12.0",
    "browserify": "^10.2.1",
    "browserify-shim": "^3.8.6",
    "cookie-parser": "~1.3.4",
    "debug": "~2.1.1",
    "express": "~4.12.0",
    "grunt": "^0.4.5",
    "grunt-cli": "^0.1.13",
    "jade": "~1.9.2",
    "lodash": "^3.9.1",
    "morgan": "~1.5.1",
    "serve-favicon": "~2.2.0"
  },
  "description": "engine for thrusty clone games",
  "main": "app.js",
  "keywords": [
    "thrust",
    "phaser"
  ],
  "browserify-shim": {
    "Stats": {
      "exports": "Stats"
    },
    "Phaser": {
      "exports": "Phaser"
    }
  },
  "browser": {
    "Stats": "./src/libs/stats.js/stats.min.js",
    "camera": "./src/environment/Camera.js"
  },
  "devDependencies": {
    "bower": "^1.4.1",
    "bower-installer": "^1.2.0",
    "browserify-istanbul": "^0.2.1",
    "chai": "^2.3.0",
    "grunt-browserify": "^3.8.0",
    "grunt-contrib-jshint": "^0.11.2",
    "grunt-contrib-requirejs": "^0.4.4",
    "grunt-contrib-uglify": "^0.9.1",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-contrib-yuidoc": "^0.10.0",
    "grunt-mocha-istanbul": "^2.4.0",
    "grunt-mocha-phantomjs": "^0.6.1",
    "grunt-smoothie": "^1.4.0",
    "istanbul": "^0.3.15",
    "istanbulify": "^0.1.0",
    "mocha": "^2.2.5",
    "mocha-phantomjs": "^3.5.3",
    "mochify": "^2.9.0",
    "mochify-istanbul": "^2.2.2",
    "sinon": "^1.14.1",
    "sinon-chai": "^2.7.0"
  }
}
